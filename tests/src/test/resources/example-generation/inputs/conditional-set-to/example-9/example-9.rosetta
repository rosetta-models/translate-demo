synonym source CONDITIONAL_SET_TO_EXAMPLE_9

type Root:
    [rootType]
    engine Engine (1..1)
        [synonym CONDITIONAL_SET_TO_EXAMPLE_9 value
            "primaryFuel" path "engineType->engineDetail",
            "secundaryFuel" path "engineType->engineDetail"]

type Engine:
    engineSpecification EngineSpecification (0..1)

type EngineSpecification:
    fuel string (1..1)
        [synonym CONDITIONAL_SET_TO_EXAMPLE_9 value "combustible"]
    engineEnum EngineEnum (1..1)
        [synonym CONDITIONAL_SET_TO_EXAMPLE_9 set to EngineEnum -> Combustion when path = "engineDetail->primaryFuel"]
        [synonym CONDITIONAL_SET_TO_EXAMPLE_9 set to EngineEnum -> Hybrid when path = "engineDetail->secondaryFuel"]

enum EngineEnum:
	HYBRID
	    [synonym CONDITIONAL_SET_TO_EXAMPLE_9 value "hybrid"]
	COMBUSTION
	    [synonym CONDITIONAL_SET_TO_EXAMPLE_9 value "combustion"]

