namespace demo.translate.conditional_set_to.example_8
version "${project.version}"

/*
$DESCRIPTION$
*/
synonym source CONDITIONAL_SET_TO_EXAMPLE_8

type Root:
    [rootType]
	engine Engine (1..1)
		[synonym CONDITIONAL_SET_TO_EXAMPLE_8 value "engineType"]

type Engine:
	engineSpecification EngineSpecification (0..*)

type EngineSpecification:
	fuel string (1..1)
		[synonym CONDITIONAL_SET_TO_EXAMPLE_8 value "combustible" path "engineDetail->primaryFuel" ]
		[synonym CONDITIONAL_SET_TO_EXAMPLE_8 value "combustible" path "engineDetail->secondaryFuel" ]
	engineEnum EngineEnum (1..1)
		[synonym CONDITIONAL_SET_TO_EXAMPLE_8 set to EngineEnum -> COMBUSTION when path = "engineDetail->primaryFuel"]
		[synonym CONDITIONAL_SET_TO_EXAMPLE_8 set to EngineEnum -> HYBRID when path = "engineDetail->alternativeCombustible"]

enum EngineEnum:
	HYBRID
		[synonym CONDITIONAL_SET_TO_EXAMPLE_8 value "hybrid"]
	COMBUSTION
		[synonym CONDITIONAL_SET_TO_EXAMPLE_8 value "combustion"]

