namespace demo.translate.meta_scoped_reference.example_2
version "${project.version}"

synonym source META_SCOPED_REFERENCE_EXAMPLE_2

type Root:
    [rootType]
	pq PriceQuantity (1..1)
	rpq ResolvablePayoutQuantity (1..1)
	    [synonym META_SCOPED_REFERENCE_EXAMPLE_2 value "b" path "a"]

type PriceQuantity:
	quantity Quantity (1..1)
        [metadata location]
        [synonym META_SCOPED_REFERENCE_EXAMPLE_2 value "b" path "a"]

type ResolvablePayoutQuantity:
	resolvedQuantity Quantity (1..1)
        [metadata address "pointsTo"=PriceQuantity->quantity]
        [synonym META_SCOPED_REFERENCE_EXAMPLE_2 meta "c"]

type Quantity:
	amount number (1..1)
	    [synonym META_SCOPED_REFERENCE_EXAMPLE_2 value "c" maps 2]
