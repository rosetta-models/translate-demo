namespace demo.translate.meta_scoped_reference.example_2
version "${project.version}"

/*
$DESCRIPTION$
*/
synonym source META_SCOPED_REFERENCE_EXAMPLE_2

type Root:
    [rootType]
	engine Engine (1..1)
	vehicle Vehicle (1..1)

type Engine:
	quantity EngineMetric (1..1)
        [metadata location]
        [synonym META_SCOPED_REFERENCE_EXAMPLE_2 value "engineDetail" path "engineType"]

type Vehicle:
    resolvablePayoutQuantity EngineSpecification (1..1)
	    [synonym META_SCOPED_REFERENCE_EXAMPLE_2 value "engineDetail" path "engineType"]

type EngineSpecification:
	resolvedQuantity EngineMetric (1..1)
        [metadata address "pointsTo"=Engine->quantity]
        [synonym META_SCOPED_REFERENCE_EXAMPLE_2 meta "horsePower"] // "meta" with no "value" specified

type EngineMetric:
	amount number (1..1)
	    [synonym META_SCOPED_REFERENCE_EXAMPLE_2 value "horsePower" maps 2]

