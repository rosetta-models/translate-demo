namespace demo.translate.mappers.example_2
version "${project.version}"

/*
Example 2:

Mapper sets fields on single cardinality complex type.
*/
synonym source MAPPERS_EXAMPLE_2

type Root:
    [rootType]
	zField Z (1..1)
	    [synonym MAPPERS_EXAMPLE_2 value "a" mapper "Example2"]

type Z:
	str1Field string (1..1)
	    // value set by mapper
	str2Field string (1..1)
	    // value set by mapper
	str3Field string (1..1)
	    [synonym MAPPERS_EXAMPLE_2 value "f" path "b->c"]

